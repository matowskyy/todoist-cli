{
  "name": "@doist/todoist-cli",
  "version": "0.1.0",
  "description": "TypeScript CLI for Todoist",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "td": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "todoist",
    "cli",
    "todo",
    "tasks"
  ],
  "author": "Ernesto Garc√≠a <ernesto@ernesto.dev>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@doist/todoist-api-typescript": "6.2.1",
    "chalk": "5.6.2",
    "commander": "14.0.2",
    "marked": "15.0.12",
    "marked-terminal": "7.3.0",
    "open": "11.0.0",
    "yocto-spinner": "1.0.0"
  },
  "devDependencies": {
    "@types/marked-terminal": "6.1.1",
    "@types/node": "25.0.3",
    "lefthook": "1.10.10",
    "prettier": "3.4.2",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
